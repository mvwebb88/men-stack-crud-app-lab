<!DOCTYPE html>
<html lang="en">
  <%- include("../partials/head", { title: "Add Car" }) %>

  <body>
    <%- include("../partials/nav") %>

    <main class="container">
      <!-- Page heading -->
      <h1>Add a New Car</h1>

      <!-- Form to create car -->
      <form action="/cars" method="POST">
        <label>Make</label>
        <input name="make" required />

        <label>Model</label>
        <input name="model" required />

        <label>Year</label>
        <input type="number" name="year" required />

        <label>Color</label>
        <input name="color" />

        <label>
          Electric?
          <input type="checkbox" name="isElectric" />
        </label>

        <!-- Submit button -->
        <button class="btn btn-primary">Create</button>
      </form>
    </main>
  </body>
</html>

